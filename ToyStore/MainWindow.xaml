<Window x:Class="ToyStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToyStore"
        mc:Ignorable="d"
         Height="450" Width="500" ResizeMode="NoResize" 
        WindowStyle="None" Background="Transparent"
        AllowsTransparency="True">

    <Border Background="#272537" CornerRadius="20">
        <Grid>
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top"
                   FontSize="34" Width="300" Height="50" FontFamily="Arial"
                   Text=" BalooToy"  Margin="160,80,0,80" Foreground="White" />
                <Button Content="Login " 
                        Width="200" 
                        Height="50" 
                        FontSize="20"
                        Click="Button_Click"
                        Style="{StaticResource Modern}">
                    
                </Button>
            </StackPanel>

        </Grid>
    </Border>
    
</Window>
